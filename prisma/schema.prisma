generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String @id
  username String

  sessions Session[]
  games    Game[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Game {
  date   DateTime
  guesses Int
  userId String

  user User @relation(fields: [userId], references: [id])

  @@id([date, userId])
}
